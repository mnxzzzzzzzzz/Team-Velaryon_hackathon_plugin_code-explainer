<?xml version="1.0" encoding="UTF-8"?>
<idea-plugin>
    <id>com.example.context.code-oversight</id>
    <name>Code Oversight</name>
    <vendor>Team Velaryon</vendor>
    <version>1.0.0</version>

    <description>
        <![CDATA[
        AI-powered code analysis with intelligent oversight and repository insights.
        Select code, right-click "Analyze with Oversight" to get smart analysis with GitHub recommendations.
        ]]>
    </description>

    <idea-version since-build="233" until-build="241.*"/>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.lang</depends>
    <depends>com.intellij.modules.java</depends>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="Code Oversight"
                    anchor="right"
                    factoryClass="com.example.context.ExplainerToolWindowFactory"/>

        <projectConfigurable instance="com.example.context.SettingsConfigurable"
                             displayName="Code Oversight"
                             id="preferences.CodeOversight"/>
    </extensions>

    <actions>
        <action
                id="AnalyzeWithOversight"
                class="com.example.context.ExplainAction"
                text="Analyze with Oversight"
                description="Analyze selected code using AI and repository context with GitHub insights">
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
        </action>
    </actions>
</idea-plugin>